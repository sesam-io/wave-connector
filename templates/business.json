[
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-all",
    "namespaced_identifiers": false,
    "source": {
      "operation": "{{@ datatype @}}-list",
      "system": "{{@ system @}}",
      "type": "rest"
    },
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-collect",
    "namespaced_identifiers": false,
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-all",
      "type": "dataset"
    },
    "transform": {
      "rules": {
        "default": [
          [
            "merge",
            "_S.node"
          ],
          [
            "add",
            "$last-modified",
            [
              "datetime",
              "_S.node.modifiedAt"
            ]
          ]
        ]
      },
      "type": "dtl"
    },
    "type": "pipe"
  }
]