[
  {
    "_id": "wave-product-collect",
    "type": "pipe",
    "source": {
      "type": "dataset",
      "dataset": "wave-business-collect"
    },
    "transform": [
      {
        "type": "dtl",
        "rules": {
          "default": [
            [
              "add",
              "::payload",
              [
                "dict",
                "query",
                [
                  "concat",
                  "query {  business(id: \"",
                  "_S.node.id",
                  "\") { id products { edges { node {id name business {id} description unitPrice isSold isBought isArchived createdAt modifiedAt } } } } }"
                ],
                "variables",
                {}
              ]
            ]
          ]
        }
      },
      {
        "type": "rest",
        "system": "wave",
        "id_expression": "{{ node.id }}",
        "operation": "get",
        "updated_expression": "{{ modifiedAt }}"
      },
      {
        "type": "dtl",
        "rules": {
          "default": [
            [
              "create-child",
              [
                "apply",
                "customer",
                "_S.response.data.business.products.edges.node"
              ]
            ]
          ],
          "customer": [
            [
              "copy",
              "*"
            ],
            [
              "add",
              "_id",
              "_S.id"
            ]
          ]
        }
      }
    ]
  }
]