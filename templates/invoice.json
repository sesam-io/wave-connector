[
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-collect",
    "exclude_completeness": [
      "{{@ system @}}-{{@ datatype @}}-share"
    ],
    "namespaced_identifiers": false,
    "source": {
      "operation": "{{@ datatype @}}-list",
      "system": "{{@ system @}}",
      "type": "rest"
    },
    "transform": [
      {
        "rules": {
          "default": [
            [
              "merge",
              "_S.node"
            ],
            [
              "add",
              "$last-modified",
              [
                "datetime",
                "_S.node.modifiedAt"
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "properties": {
          "primary_key": "id",
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
        },
        "template": "transform-collect-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-share",
    "batch_size": 1,
    "namespaced_identifiers": false,
    "sink": {
      "deletion_tracking": false,
      "set_initial_offset": "onload"
    },
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-transform",
      "type": "dataset"
    },
    "transform": [
      {
        "rules": {
          "default": [
            [
              "copy",
              "*"
            ],
            [
              "comment",
              "businessId is required as a property on entities when inserted"
            ],
            [
              "if",
              [
                "is-null",
                "_S.id"
              ],
              [
                [
                  "add",
                  "businessId",
                  "{{@ account_id @}}"
                ],
                [
                  "remove",
                  "id"
                ]
              ]
            ],
            [
              "if",
              [
                "is-not-null",
                "_S.customer.id"
              ],
              [
                [
                  "add",
                  "customerId",
                  "_S.customer.id"
                ],
                [
                  "remove",
                  "customer"
                ]
              ]
            ],
            [
              "if",
              [
                "is-not-null",
                "_S.expenseAccount.id"
              ],
              [
                [
                  "add",
                  "expenseAccountId",
                  "_S.expenseAccount.id"
                ],
                [
                  "remove",
                  "expenseAccount"
                ]
              ]
            ],
            [
              "if",
              [
                "is-not-null",
                "_S.incomeAccount.id"
              ],
              [
                [
                  "add",
                  "incomeAccountId",
                  "_S.incomeAccount.id"
                ],
                [
                  "remove",
                  "incomeAccount"
                ]
              ]
            ],
            [
              "if",
              [
                "is-not-null",
                "_S.product.id"
              ],
              [
                [
                  "add",
                  "productId",
                  "_S.product.id"
                ],
                [
                  "remove",
                  "product"
                ]
              ]
            ],
            [
              "if",
              [
                "is-not-null",
                "_S.currency.code"
              ],
              [
                [
                  "add",
                  "_currency",
                  "_S.currency.code"
                ],
                [
                  "remove",
                  "currency"
                ],
                [
                  "add",
                  "currency",
                  "_T._currency"
                ]
              ]
            ],
            [
              "if",
              [
                "is-not-null",
                "_S.items"
              ],
              [
                "add",
                "items",
                [
                  "apply",
                  "items",
                  "_S.items"
                ]
              ]
            ],
            [
              "add",
              "$payload",
              [
                "apply",
                "payload",
                "_T."
              ]
            ]
          ],
          "items": [
            [
              "copy",
              "*"
            ],
            [
              "add",
              "productId",
              "_S.product.id"
            ],
            [
              "remove",
              "product"
            ],
            [
              "add",
              "unitPrice",
              "_S.price"
            ],
            [
              "remove",
              "price"
            ]
          ],
          "payload": [
            [
              "copy",
              "*",
              [
                "list",
                "_*",
                "$*"
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "properties": {
          "operation_delete": "{{@ datatype @}}-delete",
          "operation_insert": "{{@ datatype @}}-insert",
          "operation_lookup": "{{@ datatype @}}-lookup",
          "operation_update": "{{@ datatype @}}-update",
          "payload_property": "payload2",
          "primary_key": "id",
          "rest_system": "{{@ system @}}",
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
        },
        "template": "transform-share-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  }
]
