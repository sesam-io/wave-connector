[
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-all",
    "namespaced_identifiers": false,
    "source": {
      "operation": "{{@ datatype @}}-list",
      "system": "{{@ system @}}",
      "type": "rest"
    },
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-collect",
    "exclude_completeness": [
      "{{@ system @}}-{{@ datatype @}}-share"
    ],
    "namespaced_identifiers": false,
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-all",
      "type": "dataset"
    },
    "transform": [
      {
        "rules": {
          "default": [
            [
              "merge",
              "_S.node"
            ],
            [
              "add",
              "$last-modified",
              [
                "datetime",
                "_S.node.modifiedAt"
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "properties": {
          "primary_key": "id",
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
        },
        "template": "transform-collect-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-share",
    "batch_size": 1,
    "namespaced_identifiers": false,
    "sink": {
      "deletion_tracking": false,
      "set_initial_offset": "onload"
    },
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-transform",
      "type": "dataset"
    },
    "transform": [
      {
        "properties": {
          "client_side_patching": true,
          "operation_delete": "{{@ datatype @}}-delete",
          "operation_insert": "{{@ datatype @}}-insert",
          "operation_lookup": "{{@ datatype @}}-lookup",
          "operation_update": "{{@ datatype @}}-update",
          "payload_property": "payload2",
          "primary_key": "id",
          "rest_system": "{{@ system @}}",
          "rewrite_rules_payload": {
            "build-payload": [
              [
                "copy",
                [
                  "list",
                  "id",
                  "customerId",
                  "status",
                  "title",
                  "subhead",
                  "{{@ datatype @}}Date",
                  "exchangeRate",
                  "dueDate",
                  "memo",
                  "footer",
                  "disableAmexPayments",
                  "disableCreditCardPayments",
                  "disableBankPayments",
                  "itemTitle",
                  "unitTitle",
                  "priceTitle",
                  "hideName",
                  "hideDescription",
                  "hideUnit",
                  "hidePrice",
                  "hideAmount",
                  "poNumber",
                  "{{@ datatype @}}Number",
                  "discounts",
                  "requireTermsOfServiceAgreement"
                ]
              ],
              [
                "if",
                [
                  "is-null",
                  "_S.id"
                ],
                [
                  [
                    "add",
                    "businessId",
                    "{{@ account_id @}}"
                  ],
                  [
                    "remove",
                    "id"
                  ]
                ]
              ],
              [
                "add-if",
                "customerId",
                "_S.customer.id"
              ],
              [
                "add-if",
                "expenseAccountId",
                "_S.expenseAccount.id"
              ],
              [
                "add-if",
                "incomeAccountId",
                "_S.incomeAccount.id"
              ],
              [
                "add-if",
                "productId",
                "_S.product.id"
              ],
              [
                "add-if",
                "currency",
                "_S.currency.code"
              ],
              [
                "add-if",
                "address",
                [
                  "apply",
                  "fix-address",
                  "_S.address"
                ]
              ],
              [
                "if",
                [
                  "is-not-empty",
                  [
                    "filter",
                    [
                      "is-not-null",
                      "_.product.id"
                    ],
                    "_S.items"
                  ]
                ],
                [
                  "merge",
                  [
                    "dict",
                    "items",
                    [
                      "map",
                      [
                        "apply",
                        "items",
                        "_."
                      ],
                      [
                        "filter",
                        [
                          "is-not-null",
                          "_.product.id"
                        ],
                        "_S.items"
                      ]
                    ]
                  ]
                ]
              ]
            ],
            "fix-address": [
              [
                "copy",
                "*",
                "country"
              ],
              [
                "add-if",
                "countryCode",
                "_S.country.code"
              ],
              [
                "add-if",
                "provinceCode",
                "_S.province.code"
              ]
            ],
            "items": [
              [
                "copy",
                [
                  "list",
                  "description",
                  "quantity"
                ]
              ],
              [
                "add",
                "productId",
                "_S.product.id"
              ],
              [
                "add-if",
                "unitPrice",
                "_S.price"
              ],
              [
                "add-if",
                "taxes",
                [
                  "apply",
                  "items2",
                  "_S.taxes"
                ]
              ]
            ],
            "items2": [
              [
                "add",
                "amount",
                "_S.amount.value"
              ],
              [
                "add",
                "salesTaxId",
                "_S.salesTax.id"
              ]
            ],
            "rewrite_insert_payload": [
              [
                "add",
                "$payload",
                [
                  "apply",
                  "build-payload",
                  "_S."
                ]
              ]
            ],
            "rewrite_update_payload_after_patch": [
              [
                "add",
                "$payload",
                [
                  "apply",
                  "build-payload",
                  "_S._payload"
                ]
              ]
            ]
          },
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
        },
        "template": "transform-share-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  }
]