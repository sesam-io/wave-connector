[
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-collect",
    "exclude_completeness": [
      "{{@ system @}}-{{@ datatype @}}-share"
    ],
    "namespaced_identifiers": false,
    "source": {
      "operation": "{{@ datatype @}}-list",
      "system": "{{@ system @}}",
      "type": "rest"
    },
    "transform": [
      {
        "rules": {
          "default": [
            [
              "merge",
              "_S.node"
            ],
            [
              "add",
              "$last-modified",
              [
                "datetime",
                "_S.node.modifiedAt"
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "properties": {
          "primary_key": "id",
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
        },
        "template": "transform-collect-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  },
  {
    "_id": "{{@ system @}}-{{@ datatype @}}-share",
    "batch_size": 1,
    "comment": "TODO need to validate the responses from each operation, as status codes are always 200",
    "namespaced_identifiers": false,
    "sink": {
      "deletion_tracking": false,
      "set_initial_offset": "onload"
    },
    "source": {
      "dataset": "{{@ system @}}-{{@ datatype @}}-transform",
      "type": "dataset"
    },
    "transform": [
      {
        "rules": {
          "default": [
            [
              "copy",
              "*"
            ],
            [
              "comment",
              "businessId is required as a property on entities when inserted"
            ],
            [
              "if",
              [
                "is-null",
                "_S.id"
              ],
              [
                [
                  "add",
                  "businessId",
                  "{{@ account_id @}}"
                ],
                [
                  "if",
                  [
                    "is-not-null",
                    "_S.{{@ datatype @}}.id"
                  ],
                  [
                    [
                      "add",
                      "{{@ datatype @}}Id",
                      "_S.{{@ datatype @}}.id"
                    ],
                    [
                      "remove",
                      "{{@ datatype @}}"
                    ]
                  ]
                ],
                [
                  "if",
                  [
                    "is-not-null",
                    "_S.expenseAccount.id"
                  ],
                  [
                    [
                      "add",
                      "expenseAccountId",
                      "_S.expenseAccount.id"
                    ],
                    [
                      "remove",
                      "expenseAccount"
                    ]
                  ]
                ],
                [
                  "if",
                  [
                    "is-not-null",
                    "_S.incomeAccount.id"
                  ],
                  [
                    [
                      "add",
                      "incomeAccountId",
                      "_S.incomeAccount.id"
                    ],
                    [
                      "remove",
                      "incomeAccount"
                    ]
                  ]
                ],
                [
                  "remove",
                  "id"
                ],
                [
                  "add",
                  "$payload",
                  [
                    "apply",
                    "payload",
                    "_T."
                  ]
                ]
              ]
            ]
          ],
          "payload": [
            [
              "merge",
              [
                "dict",
                [
                  "filter",
                  [
                    "not",
                    [
                      "or",
                      [
                        "matches",
                        "_*",
                        [
                          "first",
                          "_."
                        ]
                      ],
                      [
                        "matches",
                        "$*",
                        [
                          "first",
                          "_."
                        ]
                      ]
                    ]
                  ],
                  [
                    "items",
                    "_S."
                  ]
                ]
              ]
            ]
          ]
        },
        "type": "dtl"
      },
      {
        "properties": {
          "operation_delete": "{{@ datatype @}}-delete",
          "operation_insert": "{{@ datatype @}}-insert",
          "operation_lookup": "{{@ datatype @}}-lookup",
          "operation_update": "{{@ datatype @}}-update",
          "payload_property": "payload2",
          "primary_key": "id",
          "rest_system": "{{@ system @}}",
          "share_dataset": "{{@ system @}}-{{@ datatype @}}-share"
        },
        "template": "transform-share-rest",
        "type": "template"
      }
    ],
    "type": "pipe"
  }
]